<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:gravity="right"
        android:paddingRight="10dp"
        android:paddingTop="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_mc"
            style="@style/button_not"
            android:text="mc"/>
        <Button
            android:id="@+id/btn_mplus"
            style="@style/button_not"
            android:text="m+" />
        <Button
            android:id="@+id/btn_mminus"
            style="@style/button_not"
            android:text="m-" />
        <Button
            android:id="@+id/btn_mr"
            style="@style/button_not"
            android:text="mr" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_c"
            style="@style/button_not_n"
            android:text="C"/>
        <Button
            android:id="@+id/btn_div"
            style="@style/button_not_n"
            android:text="/" />
        <Button
            android:id="@+id/btn_mult"
            style="@style/button_not_n"
            android:text="X" />
        <Button
            android:id="@+id/btn_del"
            style="@style/button_not_number"
            app:icon = "@drawable/ic_delete" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_7"
            style="@style/button_not_n"
            android:text="7"/>

        <Button
            android:id="@+id/btn_8"
            style="@style/button_not_n"
            android:layout_height="match_parent"
            android:text="8" />
        <Button
            android:id="@+id/btn_9"
            style="@style/button_not_n"
            android:text="9" />
        <Button
            android:id="@+id/btn_minus"
            style="@style/button_not"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_4"
            style="@style/button_not_n"
            android:text="4"/>
        <Button
            android:id="@+id/btn_5"
            style="@style/button_not_n"
            android:text="5" />
        <Button
            android:id="@+id/btn_6"
            style="@style/button_not_n"
            android:text="6" />
        <Button
            android:id="@+id/btn_plus"
            style="@style/button_not"
            android:text="+" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_1"
            style="@style/button_not_n"
            android:text="1"/>
        <Button
            android:id="@+id/btn_2"
            style="@style/button_not_n"
            android:text="2" />
        <Button
            android:id="@+id/btn_3"
            style="@style/button_not_n"
            android:text="3" />
        <Button
            android:id="@+id/btn_eq"
            style="@style/button_not"
            android:text="=" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_per"
            style="@style/button_not"
            android:text="%"/>
        <Button
            android:id="@+id/btn_0"
            style="@style/button_not_n"
            android:text="0" />
        <Button
            android:id="@+id/btn_comma"
            style="@style/button_not"
            android:text="." />


    </LinearLayout>


</LinearLayout>